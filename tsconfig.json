{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "target": "ES2021",
        "rootDir": "src/",
        "outDir": "dist",
        "baseUrl": "src/",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/script/*.ts",
    ]
}
